/* pages/template/beforeLogin.wxss */

/**头部**/

.header {
    width: 100%;
    background-color: #2b2a30;
    display: flex;
    align-items: center;
}

/**照片及个人信息**/
.avatar {
    border-radius: 8px;
    overflow: hidden;
}

.weui-media-box__bd_in-appmsg text {
    color: white;
    padding-top: 10rpx;
}

/**切换社团/上传logo**/
.right-side-bar {
    display: flex;
    flex-direction: column;
    padding: 16px;
    align-items: center;
}

.logo {
    width: 96rpx;
    height: 96rpx;
    display: block;
    margin-bottom: 16rpx;
}
.switch-society {
    color: white;
}