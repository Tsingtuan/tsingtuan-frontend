/**index.wxss**/
/**iconfont 初始化**/
@font-face {
  font-family: 'iconfont';  /* project id 841172 */
  src: url('//at.alicdn.com/t/font_841172_j7lr61wldhi.eot');
  src: url('//at.alicdn.com/t/font_841172_j7lr61wldhi.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_841172_j7lr61wldhi.woff') format('woff'),
  url('//at.alicdn.com/t/font_841172_j7lr61wldhi.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_841172_j7lr61wldhi.svg#iconfont') format('svg');
}

.iconfont{
  font-family:"iconfont" !important;
  font-size:32px;font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
  color: #ffab00;
}
/**icon font 图标内容**/
.icon-HR:before { 
  content: "\eb2d";
}
.icon-Account:before { 
  content: "\e61c";
}
.icon-Coop:before {
  content: "\e67d"
}
.icon-Task:before {
  content: "\e60a"
}
.icon-Assign:before {
  content: "\e62c"
}

/**个人信息**/
.header {
  background-color: #2B2A30;
  display: flex;
  align-items: center;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8px;
  overflow: hidden;
}
.intro {
  margin-left: 24px;
  color: white;
  font-size: 36rpx;
}
.weui-media-box:last-child:after {
    border-bottom: 1rpx solid #000;
}

/**footer**/
.footer {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  color: #c3c3c3;
}